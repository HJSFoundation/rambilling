<table class="table">
  <tr>
    <th><%= @task.project.name %> for <%= @task.project.client.name %></th>
  </tr>
  <tr>
    <td>Status: <%= @task.status %></td>
  </tr>
  <tr>
    <td><%= @task.description %></td>
  </tr>
  <tr>
    <td><%= @task.time %> hrs</td>
  </tr>
</table>

<div class="button-row">
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-warning btn-large' %>
  <%= link_to 'Destroy', @task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-large' %>
</div>

<div><%= link_to 'Back to Dashboard', tasks_path, class: 'btn btn-primary btn-large' %></div>

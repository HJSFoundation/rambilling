<% if notice %>
  <div id="notice" class="alert "><%= notice %></div>
<% end %>

<%= form_tag(create_session_url) do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "login", class: 'btn btn-large btn-success' %>
  </div>
<% end -%>

or <%= link_to 'Sign up', new_user_path %>

